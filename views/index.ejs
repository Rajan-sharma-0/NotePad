<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My EJS Page</title>
        <link rel="stylesheet" href="/styles.css">
         <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
        <script src="/script.js"></script>
    </head>
    <body>
        <div class="main w-full min-h-screen bg-zinc-800">
            <div class="form p-10 text-white">
                <form action="/create" method="post">
                    <input class="block px-5 py-2 bg-zinc-700 w-full rounded-lg outline-none" type="text" placeholder="Enter Title here.." name="title" >
                    <textarea type="text" class="block px-5 py-2 bg-zinc-700 resize-none outline-none w-full mt-5 rounded-lg" placeholder="write your task detail here..." name="details"></textarea>
                    <input class="mt-5 bg-blue-500 rounded-lg p-2" type="submit" value="Create Task">
                </form>
            </div>
            <div class="tasks p-10 flex gap-3 flex-wrap">
                <%  if(files.length > 0){  %>
                    <%  files.forEach(function(val){  %> 
                        <div class="task  rounded-md  w-72 px-3 py-4  bg-zinc-700">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %> </h1>
                    <div class="flex justify-between items-center mt-3">

                        <a class="text-blue-600 inline-block" href="/files/<%= val %>" >Read More</a>
                        <a class="" href="/edit/<%= val %>">edit</a>
                    </div>
                </div>

                  <%  }) %>
                    <%  } else{ %>
                        <h3 class="text-zinc-500">No Task yetz.</h3> 

                        <% } %>   
            </div>   

           
        </div>
        </body>
</html>
